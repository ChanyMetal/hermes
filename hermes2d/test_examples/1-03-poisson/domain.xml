<?xml version="1.0"?>

<mesh_h2d xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../include/mesh/mesh_h2d_xml.xsd">

  <variables>
    <variable name="a" value="1.0" />
    <variable name="m_a" value="-1.0" />
		<variable name="b" value="0.70710678118654757" />		
  </variables>

  <vertices>
	<!-- Contains all examples how it is possible to write zero. -->
    <vertex x="0.00000000000000000000" y="m_a" />
		<vertex x="a" y="m_a" />
		<vertex x="m_a" y="0" />
		<vertex x="." y=".00" />
		<vertex x="a" y=".00000000" />
		<vertex x="m_a" y="a" />
		<vertex x="0.000" y="a" />
		<vertex x="b" y="b" />
  </vertices>

  <elements>
		<triangle v1="3" v2="4" v3="7" marker="Copper" />
		<triangle v1="3" v2="7" v3="6" marker="Aluminum" />
    <quad v1="0" v2="1" v3="4" v4="3" marker="Copper" />
		<quad v1="2" v2="3" v3="6" v4="5" marker="Aluminum" />
  </elements>

  <boundaries>
    <boundary_edge v1="0" v2="1" marker="Bottom" />
		<boundary_edge v1="1" v2="4" marker="Outer" />
		<boundary_edge v1="3" v2="0" marker="Inner" />
		<boundary_edge v1="4" v2="7" marker="Outer" />
		<boundary_edge v1="7" v2="6" marker="Outer" />
		<boundary_edge v1="2" v2="3" marker="Inner" />
		<boundary_edge v1="6" v2="5" marker="Outer" />
		<boundary_edge v1="5" v2="2" marker="Left" />
	</boundaries>

  <curves>
    <arc v1="4" v2="7" angle="45" />
		<arc v1="7" v2="6" angle="45" />
  </curves>
</mesh_h2d>